{
  "name": "school-finder",
  "version": "0.0.1",
  "engines": {
    "node": "6.11.x"
  },
  "scripts": {
    "start": "node server",
    "test": "npm run test-backend && npm run test-frontend",
    "test-backend": "NODE_ENV=test ./node_modules/.bin/mocha --exit",
    "test-frontend": "cd react-ui/ && npm run test",
